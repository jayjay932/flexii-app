{
  "expo": {
    "name": "Flexiii",
    "slug": "Flexiii",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/flexii.png",
    "scheme": "Flexiii",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "locales": {
      "fr": "./locales/fr.json",
      "en": "./locales/en.json"
    },

    "ios": {
      "supportsTablet": false,                  
      "bundleIdentifier": "com.jayjay930.Flexiii",
      "buildNumber": "6",                           
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,

        "NSPhotoLibraryUsageDescription": "Flexii a besoin d’accéder à votre photothèque pour ajouter des photos à vos annonces (ex. images du logement ou véhicule). Sans cet accès, vous ne pourrez pas sélectionner des images existantes pour publier votre annonce.",
        "NSPhotoLibraryAddUsageDescription": "Flexii peut enregistrer des images (ex. reçus de réservation, exports PDF ou photos retouchées) dans votre photothèque, à votre demande.",
        "NSCameraUsageDescription": "Flexii utilise la caméra pour prendre des photos de votre logement ou véhicule à publier dans une annonce.",


        "UIApplicationSupportsIndirectInputEvents": true
      }
    },

    "android": {
      "package": "com.flexii.mobile",
      "versionCode": 2,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/flexii.png",
        "backgroundColor": "#E6F4FE"
      }
    },

    "web": {
      "favicon": "./assets/images/flexii.png"
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/flexii.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": { "backgroundColor": "#000000" }
        }
      ],
      "expo-font"
    ],

    "experiments": {
      "reactCompiler": true
    },

    "extra": {
      "eas": {
        "projectId": "2d78d0ad-a3da-46ff-8e80-b651b1f52455"
      }
    }
  }
}
